<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.alimi.MemoActivity"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:textColor="#000000"
    android:background="#D6E6F0"
    android:fontFamily="@font/nanumbarunpenb"
    android:textSize="20dp"
    android:id="@+id/activity_memo"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9e5ed"
                android:minHeight="?attr/actionBarSize"
                android:textSize="20dp"
                android:theme="?attr/actionBarTheme"
                app:title="세부사항"
                app:titleTextColor="#000000" />

            <EditText
                android:id="@+id/title_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="제목"
                android:maxLines="1"
                android:padding="10dp"
                android:fontFamily="@font/nanumbarunpenb"
                android:textSize="20dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/contents_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarunpenb"
                android:hint="메모"
                android:maxLines="10"
                android:padding="10dp"
                android:textSize="20dp"
                android:visibility="visible" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:text="특정 위치에서 알리기"
                android:fontFamily="@font/nanumbarunpenb"
                android:textSize="18dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D6E6F0"
                android:fontFamily="@font/nanumbarunpenb"
                android:onClick="onClick_01"
                android:gravity="left"
                android:text="위치"
                android:padding="10dp"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:selectAllOnFocus="false"
                android:text="특정 날짜에 알리기"
                android:padding="10dp"
                android:fontFamily="@font/nanumbarunpenb"
                android:textSize="18dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:selectAllOnFocus="true"
                android:text="알림"
                android:fontFamily="@font/nanumbarunpenb"
                android:textSize="20dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="10dp"
                android:background="#D6E6F0"
                android:fontFamily="@font/nanumbarunpenb"
                android:onClick="showTimePickerDialog"
                android:text="time"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D6E6F0"
                android:gravity="left"
                android:padding="10dp"
                android:fontFamily="@font/nanumbarunpenb"
                android:onClick="showDatePickerDialog"
                android:text="date"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:selectAllOnFocus="true"
                android:text="반복"
                android:fontFamily="@font/nanumbarunpenb"
                android:textSize="20dp"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/spinner2"
                android:entries="@array/반복"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:ems="10"
                android:fontFamily="@font/nanumbarunpenb"
                android:textSize="20dp"
                android:layout_alignParentTop="true" />


            <TextView
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:selectAllOnFocus="false"
                android:text="알림음"
                android:fontFamily="@font/nanumbarunpenb"
                android:textSize="20dp"
                android:visibility="visible" />


            <Spinner
                android:id="@+id/spinner3"
                android:entries="@array/알림음"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:ems="10"
                android:fontFamily="@font/nanumbarunpenb"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv"
                android:textSize="20dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>